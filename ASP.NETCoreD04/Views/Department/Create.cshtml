@model DepartmentCreateVM
@* Type => Value *@

<div class="d-flex justify-content-center">
    <h1 class="text-success">Create Employee</h1>
</div>

<br />
<hr />
<br />

<form action="~/Department/Create" method="post">
    @* Search *@
    @* @Html.TextBox("Search", null, new { @class = "form-control", placeholder = "Search..." }) *@

    <div class="mb-3 form-group">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>

    <div class="mb-3 form-group">
        @Html.LabelFor(d => d.Name, new { @class = "form-label" })
        @Html.TextBoxFor(d => d.Name, new
        {
            @class = "form-control",
                required = "required" ,
                placeholder = "Enter Department Name"
                })
        @Html.ValidationMessageFor(d => d.Name, null, new { @class = "text-danger" })
        @* @Html.EditorFor(d=>d.Name) *@
    </div>


    <div class="d-flex justify-content-center gap-3">
        <input type="submit" class="btn btn-success" value="Create Department" />
        @* <a href="~/Department/Index" class="btn btn-secondary">Cancel</a> *@
        @Html.ActionLink("Cancel", "Index", "Department", null, new { @class = "btn btn-secondary" })
    </div>

</form>

@* HTML Helper *@
@using (Html.BeginForm("Create", "Department", FormMethod.Post))
{
    <div class="mb-3 form-group">
        @Html.LabelFor(d => d.Name, new { @class = "form-label" })
        @Html.TextBoxFor(d => d.Name, new
        {
            @class = "form-control",
        required = "required" ,
        placeholder = "Enter Department Name"
        })

</div>

<div class="d-flex justify-content-center gap-3">
    <input type="submit" class="btn btn-success" value="Create Department" />
    @Html.ActionLink("Cancel", "Index", "Department", null, new { @class = "btn btn-secondary" })
</div>
}