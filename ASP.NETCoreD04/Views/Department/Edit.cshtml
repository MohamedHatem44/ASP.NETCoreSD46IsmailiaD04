@model DepartmentEditVM

<div class="d-flex justify-content-center">
    <h1 class="text-success">Edit Department</h1>
</div>

<br />
<hr />
<br />

<form action="~/Department/Edit" method="post">

    <div class="mb-3 form-group">
        <label for="Id" class="form-label">Id</label>
        <input type="number" class="form-control" id="Id" name="Id" required value="@Model.Id" readonly />
    </div>

    <div class="mb-3 form-group">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required value="@Model.Name" />
    </div>

    <div class="d-flex justify-content-center gap-3">
        <input type="submit" class="btn btn-success" value="Save" />
        <a href="~/Department/Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>


@using (Html.BeginForm("Edit", "Department", FormMethod.Post))
{
    <div class="mb-3 form-group">

        @Html.LabelFor(d => d.Name, new { @class = "form-label" })

        @Html.TextBoxFor(d => d.Name, new
        {
            @class = "form-control",
            required = "required" ,
            placeholder = "Enter Department Name"
        })

</div>

<div class="d-flex justify-content-center gap-3">
    <input type="submit" class="btn btn-success" value="Save" />
    @Html.ActionLink(
        "Cancel",
        "Index",
        "Department",
        null,
        new { @class = "btn btn-secondary" })
</div>
}
